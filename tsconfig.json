{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
    },
    "include": ["src", "types"],
}
